############################################################
# Example Environment Configuration (PLACEHOLDERS ONLY)     #
# Copy to .env for local development and fill real values.  #
# Never commit real secrets.                                #
############################################################

# Runtime / Node
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# Vite / Frontend consumed (see src/config/env.ts)
VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_JWT_SECRET=change_me_jwt_secret_32_chars_min
VITE_API_URL=http://localhost:3001
VITE_API_BASE_URL=http://localhost:3001 # Alias used by some clients (documentation only)
VITE_APP_NAME=Anima Insights
VITE_APP_VERSION=1.0.0
VITE_ENV=development
VITE_MFA_ENABLED=false
VITE_ANALYTICS_ENABLED=false

# Auth / Tokens (server side helpers)
JWT_SECRET=change_me_backend_jwt_secret_32_chars_min
ENABLE_EMAIL_VERIFY=false
BASE_URL=http://localhost:5173

# Database (Postgres) - placeholders
POSTGRES_USER=numinos
POSTGRES_PASSWORD=change_me_password
POSTGRES_DB=numinos
POSTGRES_PORT=5432
DATABASE_URL=postgres://numinos:change_me_password@localhost:5432/numinos

# SQLite alternative (if using local file through drizzle)
SQLITE_PATH=./data/dev.sqlite

# Redis / Cache
REDIS_URL=redis://localhost:6379

# Host Auth Keys (never commit private keys)
HOST_PRIVATE_KEY_PATH=numinos-service/test-keys/host_private.pem
HOST_PUBLIC_KEY_PATH=numinos-service/test-keys/host_public.pem

# Optional External Integrations
ANALYTICS_API_KEY=your_analytics_api_key
SENTRY_DSN=your_sentry_dsn

# Feature Toggles (example additional flags)
FEATURE_EXPERIMENTAL_INSIGHTS=false

# Validation (shadow by default) - leave blank or set true/route list locally
ENABLE_API_VALIDATION=
ENABLE_RESPONSE_VALIDATION=
VALIDATION_STRICT_ROUTES=
RESPONSE_VALIDATION_STATUS=
# (Legacy alternative still supported: RESPONSE_VALIDATION_STRICT_STATUS)

# End of file

# Frontend Environment Variables (Vite)
VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_JWT_SECRET=your_jwt_secret_here_min_32_characters
VITE_API_URL=http://localhost:3000
VITE_APP_NAME=Anima Insights
VITE_APP_VERSION=1.0.0
VITE_ENV=development
VITE_MFA_ENABLED=false
VITE_ANALYTICS_ENABLED=false

# Authentication Configuration (New)
ENABLE_EMAIL_VERIFY=false
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-for-auth
BASE_URL=http://localhost:3000

# Database Configuration
POSTGRES_USER=numinos
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_DB=numinos
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# Backend/API Environment Variables
NODE_ENV=development
PORT=3000

# Security Keys (Generate your own!)
# Use: openssl genrsa -out host_private.pem 2048
# Use: openssl rsa -in host_private.pem -pubout -out host_public.pem
HOST_PRIVATE_KEY_PATH=./test-keys/host_private.pem
HOST_PUBLIC_KEY_PATH=./test-keys/host_public.pem

# Optional: External APIs
ANALYTICS_API_KEY=your_analytics_api_key
SENTRY_DSN=your_sentry_dsn

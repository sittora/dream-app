{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "noEmit": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src/server.ts",
    "src/server/**/*.ts",
    "src/server/**/*.tsx"
  ],
  "exclude": [
    "src/components/**/*",
    "src/pages/**/*",
    "src/App.tsx",
    "src/main.tsx"
  ]
  // TODO: Re-enable noUnusedLocals/noUnusedParameters after pruning unused parameters in server layer.
}